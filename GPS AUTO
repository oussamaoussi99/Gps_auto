  <script>
    /**
     * تعليمات التهيئة:
     * - استبدل `WEBHOOK_URL` بعنوان نقطة استقبال (Webhook) الذي تريد إرسال الطلبات إليه.
     *   أمثلة: Formspree endpoint, Zapier webhook, Google Apps Script URL، أو نقطة خلفية على موقعك.
     * - إذا أردت استقبال الطلبات عبر تيلغرام أو عبر Google Sheets، يمكنك إعداد Zapier/Make/Google Apps Script
     *   ثم وضع رابط الـ webhook هنا.
     */

    const WEBHOOK_URL = 'https://example.com/submit'; // <-- ضع هنا رابط الـ webhook الخاص بك
    const WHATSAPP_NUMBER = '+213561452047'; // <-- ضع رقم واتساب عملك بصيغة دولية (بدون مسافات)

    const form = document.getElementById('orderForm');
    const successBox = document.getElementById('successBox');
    const whatsappBtn = document.getElementById('whatsappBtn');

    form.addEventListener('submit', async function(e){
      e.preventDefault();
      const data = {
        fullname: form.fullname.value.trim(),
        phone: form.phone.value.trim(),
        wilaya: form.wilaya.value.trim(),
        address: form.address.value.trim(),
        notes: form.notes.value.trim(),
        product: 'GPS Auto',
        date: new Date().toISOString()
      };

      // إرسال إلى webhook (ستحتاج لتغيير الرابط أعلاه)
      try{
        if (WEBHOOK_URL && !WEBHOOK_URL.includes('example.com')){
          await fetch(WEBHOOK_URL, {
            method: 'POST',
            headers: {'Content-Type':'application/json'},
            body: JSON.stringify(data)
          });
        } else {
          console.warn('لم يتم إعداد رابط الـ WEBHOOK: استبدل WEBHOOK_URL بعنوانك الحقيقي.');
        }

        // عرض رسالة نجاح للمستخدم
        successBox.style.display = 'block';
        form.reset();

      } catch(err){
        alert('حدث خطأ أثناء إرسال الطلب. حاول لاحقًا أو تواصل عبر الواتساب.');
        console.error(err);
      }
    });

    whatsappBtn.addEventListener('click', function(){
      const name = encodeURIComponent(document.getElementById('fullname').value || 'زبون');
      const phone = encodeURIComponent(document.getElementById('phone').value || '');
      const wilaya = encodeURIComponent(document.getElementById('wilaya').value || '');
      const message = `طلب جهاز GPS\nالاسم: ${name}\nالهاتف: ${phone}\nالولاية: ${wilaya}`;

      const waNumber = WHATSAPP_NUMBER.replace(/[^0-9+]/g,'');
      const waUrl = `https://wa.me/${waNumber.replace('+','') }?text=${encodeURIComponent(message)}`;
      window.open(waUrl, '_blank');
    });
  </script>
</body>
